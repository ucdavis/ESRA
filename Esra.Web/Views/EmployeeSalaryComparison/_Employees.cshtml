@model Esra.Web.Models.EmployeeSalaryComparisonViewModel
@using System.Text; @*<legend>Employees</legend>*@@*<ul>*@
@helper GetEditedClassNames(bool dateChecked, bool dateAdjusted){
    <text>@(dateChecked ? "date-checked" : string.Empty) @(dateAdjusted ? "date-adjusted" : string.Empty)</text>
}

@GetEditedClassNames(true, true)

@{
    if (Model.Employees.Count > 0)
    {
@* <li>*@
    <div id="employee-salary-comparison-report">
        <div>
            <br />
            Items highlighted in <font style="background: #90EE90;">light green</font> indicate
            a change from PPS.<br />
            Dates with <strong>bolded</strong> text have been validated to be correct in PPS.<br />
            <br />
        </div>
        <h3>
            Employee Salary Comparison Report</h3>
        <table id="employees">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        Department Name
                    </th>
                    <th>
                        Title<br />
                        Code
                    </th>
                    <th>
                        Salary<br />
                        Grade
                    </th>
                    <th>
                        Bargaining<br />
                        Unit
                    </th>
                    <th>
                        Employee Name
                    </th>
                    <th>
                        Hire Date
                    </th>
                    <th>
                        Years Of<br />
                        Service
                    </th>
                    <th>
                        Begin Date<br />
                        (in Title)
                    </th>
                    <th>
                        Time<br />
                        In<br />
                        Title
                    </th>
                    <th>
                        Experience<br />
                        Begin Date
                    </th>
                    <th>
                        Years Of<br />
                        Experience
                    </th>
                    <th>
                        Pay Rate
                    </th>
                    <th>
                        Department<br />
                        Comments<br />
                    </th>
                    <th>
                        Dean's<br />
                        Office<br />
                        Comments<br />
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Esra.Core.Domain.Employee emp in Model.Employees)
                {
                    <tr>
                        <td><a href="#" class="edit-row">Edit</a></td>
                        <td>@emp.HomeDepartment.Name
                        </td>
                        <td>@emp.TitleCode
                        </td>
                        <td>@emp.SalaryGrade
                        </td>
                        <td>@emp.BargainingUnitCode
                        </td>
                        <td>@emp.FullName
                        </td>
                        <td class="@GetEditedClassNames(emp.PPSCareerHireDateChecked, emp.CareerDateHasBeenAdjusted)">
                            @emp.HireDate.ToShortDateString()
                        </td>
                        <td>@String.Format("{0:0.00}", emp.YearsOfService)
                        </td>
                        <td class="@GetEditedClassNames(emp.PPSApptHireDateChecked, emp.ApptDateHasBeenAdjusted)">
                            @emp.BeginDate.ToShortDateString()
                        </td>
                        <td>@String.Format("{0:0.00}", emp.TimeInTitle)
                        </td>
                        <td>@String.Format("{0:MM/dd/yyyy}", emp.ExperienceBeginDate)
                        </td>
                        <td>@String.Format("{0:0.00}", emp.YearsOfExperience)
                        </td>
                        <td>@String.Format("{0:c}", emp.PayRate)
                        </td>
                        <td>@emp.DepartmentComments
                        </td>
                        <td>@emp.DeansOfficeComments
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
@* </li>*@ } }@* </ul>*@ @*</fieldset>*@