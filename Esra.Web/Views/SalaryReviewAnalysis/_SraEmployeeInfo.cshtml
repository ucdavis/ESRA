@model Esra.Core.Domain.SRAEmployee
@helper GetEditedClassNames(bool dateChecked, bool dateAdjusted)
    {
    @(dateChecked && dateAdjusted ? "date-checked-and-adjusted" : dateChecked ? "date-checked" : dateAdjusted ? "date-adjusted" : string.Empty)
}
<div>
    <table>
        <tr>
            <th>
                Department Name
            </th>
            <th>
                Employee Name
            </th>
            <th>
                Hire Date
            </th>
            <th>
                Years Of Service
            </th>
            <th>
                Begin Date (in Title)
            </th>
            <th>
                Time In Title
            </th>
            <th>
                Pay Rate
            </th>
            <th>
                Department Comments
            </th>
            <th>
                Dean's Office Comments
            </th>
        </tr>
        <tr>
            <td>
                @Model.HomeDepartment.Name
            </td>
            <td>
                @Model.FullName
            </td>
            <td class="@GetEditedClassNames(Model.PPSCareerHireDateChecked, Model.CareerDateHasBeenAdjusted)">
                @String.Format("{0:MM/dd/yyyy}", Model.AdjustedCareerHireDate)
            </td>
            <td>
                @String.Format("{0:0.00}", Model.YearsOfService)
            </td>
            <td class="@GetEditedClassNames(Model.PPSApptHireDateChecked, Model.ApptDateHasBeenAdjusted)">
                @String.Format("{0:MM/dd/yyyy}", Model.AdjustedApptHireDate)
            </td>
            <td>
                @String.Format("{0:0.00}", Model.TimeInTitle)
            </td>
            <td>
                @String.Format("{0:c}", Model.PayRate)
            </td>
            <td>
                @Model.DepartmentComments
            </td>
            <td>
                @Model.DeansOfficeComments
            </td>
        </tr>
    </table>
</div>