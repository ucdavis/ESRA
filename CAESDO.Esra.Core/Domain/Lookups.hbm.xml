<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">

	<class
	  name="CAESDO.Esra.Core.Domain.Login, CAESDO.Esra.Core"
	  table="Catbert3_vLogin" >
		<id name="ID" access="nosetter.lowercase" column="LoginID" unsaved-value="empty">
			<generator class="assigned" />
		</id>

		<many-to-one name="User" class="CAESDO.Esra.Core.Domain.User, CAESDO.Esra.Core" column="UserID" not-null="true" />

	</class>

	<class
	  name="CAESDO.Esra.Core.Domain.Unit, CAESDO.Esra.Core"
	  table="Catbert3_vUnit" mutable="false">
		<id name="ID" access="nosetter.lowercase" column="UnitID" unsaved-value="0">
			<generator class="assigned" />
		</id>

		<property name="FullName" column="FullName" />
		<property name="ShortName" column="ShortName" />
		<property name="PPSCode" column="PPS_Code" />
		<property name="FISCode" column="FIS_Code" />
		<property name="SchoolCode" column="SchoolCode" />
    <!--<property name="Inactive" column="Inactive" />-->

  </class>

  <class
	  name="CAESDO.Esra.Core.Domain.Roles, CAESDO.Esra.Core"
	  table="Catbert3_vRoles" >
    <id name="ID" access="nosetter.lowercase" column="RoleID" unsaved-value="0">
      <generator class="assigned" />
    </id>

    <property name="Role" column="Role" />
    <!--<property name="Inactive" column="Inactive" />-->

  </class>

</hibernate-mapping>