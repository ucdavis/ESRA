<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="CAESDO.Esra.Core.Domain.SalaryGradeQuartiles, CAESDO.Esra.Core" table="SalaryGradeMatrix" dynamic-update="true">
		<!--<id name="id" access="field" column="QuartileTypeID" unsaved-value="0">
			<generator class="identity" />
		</id>-->
		
		<composite-id>
			<key-property name="SalaryGrade" column="SalaryGrade"/>
			<key-property name="EffectiveDate" column="EffectiveDate"/>
		</composite-id>

		<bag name="SalaryScales" table="SalaryScale_V">
			<key>
				<column name="SalaryGrade" />
				<column name="EffectiveDate"/>
			</key>
			<one-to-many class="CAESDO.Esra.Core.Domain.SalaryScale, CAESDO.Esra.Core" />
		</bag>
		
		<property name="SalaryGrade" column="SalaryGrade" />
		<property name="MinAnnual" column="MinAnnual" />
		<property name="FirstQrtleAnnual" column="FirstQrtleAnnual" />
		<property name="MidAnnual" column="MidAnnual" />
		<property name="ThirdQrtleAnnual" column="ThirdQrtleAnnual" />
		<property name="MaxAnnual" column="MaxAnnual" />
		<property name="EffectiveDate" column="EffectiveDate" />
	</class>
</hibernate-mapping>